
<div>
    <p>Soy el proceso @Id</p>
    <p>Posicion @Posicion</p>
</div>

@code {
    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public int Posicion { get; set; } = 0;

    [Parameter]
    public EventCallback<int> PosicionChanged { get; set; }

    public int contador = 0;
    async Task HandlePositionChanged()
    {
        contador++;
        Posicion = contador;
        PosicionChanged.InvokeAsync(contador);
    }

    protected override void OnParametersSet()
  {
      if (Posicion != Posicion)
      {
          Posicion = Posicion;
          Console.WriteLine("a parameter has changed");
      }
  }
}
